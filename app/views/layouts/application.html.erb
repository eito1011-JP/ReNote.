<!DOCTYPE html>
<html>
  <head>
    <title>ReNote.</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%# ここに追加 %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link href="tablet.scss" rel="stylesheet" type="text/scss" media="(min-width: 320px) and (max-width: 639px)" >
    <link href="tablet.scss" rel="stylesheet" type="text/scss" media="(min-width: 640px) and (max-width: 1023px)" >
    <link href="desktop.scss" rel="stylesheet" type="text/scss" media="(min-width: 1024px)" >
  </head>

  <body>
  <div class="cover">
  <%= render 'header' %>
  <div class="container">
    <% if flash[:notice] %>
      <p class="text-success"><%= flash[:notice] %>
    <% end %>
    <% if flash[:alert] %>
      <p class="text-danger"><%= flash[:alert] %>
    <% end %>
  </div>
  <div class="container">
    <%= yield %>
    </div>
    </div>
  </body>
</html>