<div>
  <div class="col-md-4 offset-md-4">
  <h2 class="text-center">復習スケジュールの編集</h2>
    <%= form_with model: @memory, local:true do |f| %>
      <div class="form-group">
        <div div class="ml-auto boards__linkBox">
          <%= link_to '一覧', memories_path, class: 'btn btn-outline-dark' %>
        </div>
      </div>

      <div class ="form-group">
        <label>教材名</label>
        <%= f.text_field :text, class: "form-control" %>
      </div>

      <div class="form-group">
        <label>学習範囲</label>
        <%= f.text_field :range, class: "form-control" %>
      </div> 

      <div class="form-group">
        <label>勉強時間</label>
        <%= f.text_field :time, class: "form-control" %>
      </div> 

      <div class="text-center">
        <%= f.submit "登録する", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>


